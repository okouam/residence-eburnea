<style type="text/css">
	form div {
		margin-bottom: 20px
	}

	form label {
		margin-bottom: 5px;
		display: inline-block;
	}

	h3 {
		margin-bottom: 30px
	}

</style>

<div style="display: flex">

	<div class="contact-form" style="flex: 1; padding-right: 120px">
		<h3><%= raw I18n.t('contact.form_title') %></h3>
		<form>
			<div>
				<label><%= raw I18n.t('contact.sender_title') %></label>
				<input type="text" />
			</div>
			<div>
				<label><%= raw I18n.t('contact.sender_name') %></label>
				<input type="text" />
			</div>
			<div>
				<label><%= raw I18n.t('contact.sender_email') %></label>
				<input type="text" />
			</div>
			<div>
				<label><%= raw I18n.t('contact.sender_phone') %></label>
				<input type="text" />
			</div>
			<div>
				<label><%= raw I18n.t('contact.sender_message') %></label>
				<input type="text" />
			</div>
			<div>
			<input type="submit" />
			</div>
		</form>
	</div>

	<div class="map" style='flex: 1'>
		<h3><%= raw I18n.t('contact.map_title') %></h3>
		<img src="/img/contact/map.jpg" style="border: 1px solid #444"/>
	</div>

</div>
