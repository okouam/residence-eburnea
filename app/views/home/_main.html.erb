<style type="text/css">
	main .welcome {
		padding-left: 0;
		padding-bottom: 2em;
	}

	main .welcome h1 {
			border: 2px solid #7CC89D;
			font-size: 32px; position: relative; top: -60px; display:inline-block; padding: 12px; font-weight: 700;  background-color: #7CC89D; border-radius: 10px; opacity: 0.9;  color: white
	}

	main .media__body.intro {
		 margin-left: 17px;
		 float: right;
		 width: 22em;
		 color: #777;
		 line-height: 20px;
		 padding-left: 30px;
		 font-style: italic;
		 font-weight: normal;
		 margin-top: 20px;
		 font: 0.8em/1.5 "Lato", sans-serif;
	}
	main .media__img h4,  main .media__img p {
		text-align: center
	}
</style>

<main role="main">
	<div class="wrapper welcome" style="padding-top: 0">
		<h1><%= @title %></h1>
		<div class="media media--rev">
			<div class="media__body intro">
				<%= raw I18n.t('welcome.testimonial') %><br/><br/>
				<%= render "tripadvisor" %>
			</div>
			<div class="media__body"><%= raw I18n.t('welcome.body') %></div>
		</div>
	</div>
</main>
